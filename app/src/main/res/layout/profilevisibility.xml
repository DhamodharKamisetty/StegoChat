<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        tools:ignore="HardcodedText" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Visibility"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintBottom_toBottomOf="@id/backArrow"
        android:layout_marginStart="16dp"
        tools:ignore="HardcodedText" />

    <!-- Radio Group -->
    <RadioGroup
        android:id="@+id/visibilityOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public\nAnyone can view your profile, posts, and activities"
            android:textSize="16sp"
            android:padding="12dp"
            android:buttonTint="@color/black"
            android:textColor="#000000"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <RadioButton
            android:id="@+id/radioFriendsOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friends Only\nOnly people youâ€™ve added as friends can see your profile content"
            android:textSize="16sp"
            android:padding="12dp"
            android:checked="true"
            android:buttonTint="@color/black"
            android:textColor="#000000"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <RadioButton
            android:id="@+id/radioPrivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private\nYour profile is visible only to you"
            android:textSize="16sp"
            android:padding="12dp"
            android:buttonTint="@color/black"
            android:textColor="#000000"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </RadioGroup>

    <!-- Apply Changes Button -->
    <Button
        android:id="@+id/applyChangesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply Changes"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007BFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/visibilityOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
