<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ConfirmPasswordActivity">

    <!-- Spacer (for top margin) -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Password"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To proceed, please confirm your identity\nby entering your login password."
        android:textSize="14sp"
        android:textColor="#777777"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- Password Label -->
    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="14sp"
        android:textColor="#000000"
        tools:ignore="HardcodedText" />

    <!-- Password Input Field -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingEnd="40dp"
            android:textColor="#000000"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextContrastCheck,VisualLintTextFieldSize" />

        <ImageView
            android:id="@+id/password_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <!-- Error Message -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="⚠️ Incorrect password. Please try again."
        android:textColor="#FF0000"
        android:textSize="13sp"
        android:visibility="visible"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continue"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0066FF"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F2F2F2"
        android:textColor="#000000"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Footer Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock"
            android:tint="#AAAAAA"
            tools:ignore="ContentDescription,UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Your credentials are encrypted securely"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>

</LinearLayout>
