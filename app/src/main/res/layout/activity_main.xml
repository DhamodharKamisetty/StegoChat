<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Center Content -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Combined Logos -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Main Stego (shield) Logo -->
            <ImageView
                android:id="@+id/shield_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/group"
                android:contentDescription="Stego Shield Logo"
                android:scaleType="fitCenter"
                tools:ignore="HardcodedText" />

            <!-- Message Logo overlayed -->
            <ImageView
                android:id="@+id/message_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:contentDescription="Message Icon"
                android:src="@drawable/logo1"
                android:scaleType="fitCenter"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#1A1A1A"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_tagline"
            android:textColor="#666666"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Pagination Dots -->
    <LinearLayout
        android:id="@+id/dots_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/vector"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/vector"
            android:layout_marginEnd="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/vector" />
    </LinearLayout>

    <!-- Login and Create Account Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/purple_button_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Account"
            android:textStyle="bold"
            android:textColor="#4c51ff"
            android:textSize="16sp"
            android:background="@drawable/white_button_background"
            android:elevation="2dp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <Button
            android:id="@+id/firestoreTestButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ”§ Test Firestore and Fix Issues"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:background="@drawable/white_button_background"
            android:elevation="2dp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText,VisualLintButtonSize" />
    </LinearLayout>

</RelativeLayout>
