<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- Blue Square Icon with White Padlock -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/blue_square_icon_background"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_lock_white"
            android:contentDescription="Secure lock icon"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Email Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email_grey"
            android:layout_marginEnd="12dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Email address"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill,HardcodedText,TextFields,TextContrastCheck" />
    </LinearLayout>

    <!-- Password Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_lock_grey"
            android:layout_marginEnd="12dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:inputType="textPassword"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/passwordEyeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_eye_grey"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- Confirm Password Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_lock_grey"
            android:layout_marginEnd="12dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Confirm password"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:inputType="textPassword"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

        <ImageView
            android:id="@+id/confirmPasswordEyeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_eye_grey"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- Create Account Button -->
    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Create Account"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/blue_button_background"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <!-- Or continue with separator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or continue with"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginHorizontal="16dp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- Social Login Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <!-- Google Button -->
        <LinearLayout
            android:id="@+id/googleButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/google_button_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_google_logo"
                android:layout_marginEnd="12dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Apple Button -->
        <LinearLayout
            android:id="@+id/appleButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/google_button_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_apple_logo"
                android:layout_marginEnd="12dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <!-- Terms and Privacy Links -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By creating an account, you agree to our "
            android:textColor="#666666"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/termsOfServiceLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:textColor="#4671f2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textColor="#666666"
            android:textSize="12sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/privacyPolicyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="#4671f2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>

    <!-- Sign In Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="#666666"
            android:textSize="14sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#4671f2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>

    <!-- Invite Code Text (hidden by default) -->
    <TextView
        android:id="@+id/inviteCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <!-- Bottom Home Indicator -->
    <View
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:alpha="0.3"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>