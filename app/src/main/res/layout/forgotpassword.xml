<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back button"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forgot Password"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- Email Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your registered email address. We'll send you a One-Time Password (OTP) to reset your password."
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!-- Email Address Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="#1A1A1A"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        tools:ignore="HardcodedText" />

    <!-- Email Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/input_field_background"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email_grey"
            android:layout_marginEnd="12dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Enter your email"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#999999"
            android:inputType="textEmailAddress"
            tools:ignore="Autofill,HardcodedText,TextFields,TextContrastCheck" />
    </LinearLayout>

    <!-- Send OTP Button -->
    <Button
        android:id="@+id/sendOtpButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Send OTP"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/purple_button_background"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <!-- Verify OTP Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify OTP"
        android:textColor="#1A1A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We've sent a 6-digit OTP to your email. Enter it below to verify and reset your password."
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!-- OTP Input Boxes -->
    <LinearLayout
        android:id="@+id/otpLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/otp_input_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:cursorVisible="false"
            tools:ignore="Autofill,SpeakableTextPresentCheck" />
    </LinearLayout>

    <!-- Resend OTP Link -->
    <TextView
        android:id="@+id/resendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive OTP? Resend"
        android:textColor="#4671f2"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!-- Verify & Continue Button -->
    <Button
        android:id="@+id/verifyOtpButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Verify &amp; Continue"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/purple_button_background"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <!-- Bottom Home Indicator -->
    <View
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:alpha="0.3"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
