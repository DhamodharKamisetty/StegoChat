                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 mutual friends"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Requested 1d ago"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TextContrastCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/acceptAarav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="#4CAF50"
                        android:minHeight="40dp"
                        android:text="✓ Accept"
                        android:textColor="#FFFFFF"
                        tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck,TouchTargetSizeCheck,VisualLintButtonSize" />

                    <Button
                        android:id="@+id/rejectAarav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="#F0F0F0"
                        android:minHeight="40dp"
                        android:text="✕ Reject"
                        android:textColor="#FFFFFF"
