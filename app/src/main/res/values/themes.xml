<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stegochat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_teal</item>
        <item name="colorSecondaryVariant">@color/secondary_teal_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/primary_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Stegochat.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Stegochat.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Stegochat.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Stegochat.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Stegochat.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Stegochat.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Stegochat.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Stegochat.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Stegochat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Stegochat.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Stegochat.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Stegochat.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Stegochat.Overline</item>
    </style>

    <style name="Theme.Stegochat" parent="Base.Theme.Stegochat" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Stegochat.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Stegochat.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stegochat.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Stegochat.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Stegochat.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Stegochat.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>